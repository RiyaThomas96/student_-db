<%= form_with path: students_path, method: :get, local: true do |f| %>
  <div class="form-row align-items-center">
    <div class="col-sm-3 my-1">
      <%= text_field_tag(:student_name, '', class: "form-control", placeholder: "Student name") %>
    </div>
    <div class="col-sm-3 my-1">
      <%= text_field_tag(:institution_name, '', class: "form-control", placeholder: "Institution") %>
    </div>
    <div class="col-sm-3 my-1">
  
    
       <%= select_tag( :country_name, options_from_collection_for_select(Country.all, :country_name, :country_name),{  prompt: "Select Country" ,class: 'form-control' }) %>
       

    </div>
  
    <div class="col-auto my-1">
      <%= button_tag 'Search', class: "btn btn-primary" %>
    </div>
  </div>  
<% end %>